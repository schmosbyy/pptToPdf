#!/usr/bin/env bash
origpath=$(pwd)
bindir=$(cd $(dirname "$0") ; pwd)
cd "$origpath"
"$bindir/../Resources/Python.app/Contents/MacOS/LibreOfficePython" - $@ <<EOF
# -*- coding: utf-8 -*-
import re
import sys
from pip._internal.cli.main import main
if __name__ == '__main__':
    sys.argv[0] = re.sub(r'(-script\.pyw|\.exe)?$', '', sys.argv[0])
    sys.exit(main())
EOF
